@page
@model ChalkboardMessenger.UI.Pages.Account.LoginModel

@{
}


<div class="row w-100 justify-content-center align-items-center" style="height:85vh">
    <form class="d-flex flex-column col-4"  method="post">
        <div class="form-group m-2">
            <div class="d-flex flex-column form">
                <label for="Username"> <h4>Username</h4></label>
                <input class="form-control" id="newUsername" type="text" asp-for="Username" />
            </div>
            
            <div class="d-flex flex-column">
                <label for="Password"><h4> Password </h4></label>
                <input class="form-control" id="Password" type="password" asp-for="Password" />
            </div>
            <div class="w-100 @(!string.IsNullOrEmpty(Model.ErrorMessage) ? "bg-danger" : "" )"><p class="text-center fs-5">@Model.ErrorMessage</p></div>
        </div>


        <button class="btn btn-primary m-2"><h4>Login</h4></button>
        <a class="btn btn-primary m-2" asp-page="/Account/Register"><h4>Register</h4></a>
    </form>
    
</div>

